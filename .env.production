# Production environment variables for file.match3onlinerewareds.gamer.gd
# Place this on the production server (e.g., /var/www/.../.env) and set secure permissions (chmod 600).
# Do NOT commit to version control.

APP_ENV=production
APP_DEBUG=false
APP_URL=https://file.match3onlinerewareds.gamer.gd
DOMAIN=file.match3onlinerewareds.gamer.gd
FORCE_HTTPS=true
TIMEZONE=UTC
LOG_LEVEL=info

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=match3_prod
DB_USER=match3_user
DB_PASS=strong_db_password_here
DB_DSN=mysql:host=localhost;dbname=match3_prod;charset=utf8mb4

# App settings
JWT_SECRET=replace_with_a_long_random_secret_for_prod
JWT_TTL=604800
MIN_PASSWORD_LENGTH=8
INITIAL_BALANCE=0.00
CURRENCY=USD
MIN_PAYOUT=1.00

# PayPal REST (production credentials go here)
PAYPAL_ENV=live
PAYPAL_CLIENT_ID=your_live_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_live_paypal_client_secret_here
PAYPAL_WEBHOOK_ID=your_live_webhook_id_here
PAYPAL_API_BASE_SANDBOX=https://api-m.sandbox.paypal.com
PAYPAL_API_BASE_LIVE=https://api-m.paypal.com
PAYPAL_TOKEN_CACHE_FILE=paypal_token_cache_prod.json

# Python microservice protection
PY_MS_API_KEY=replace_with_strong_api_key_used_by_php_app_to_call_python_ms
PY_MS_BASE_URL=https://file.match3onlinerewareds.gamer.gd:8443  # if you host microservice on alternate port/host - adapt as needed

# File storage
FILES_PATH=/var/www/file.match3onlinerewareds.gamer.gd/files
MAX_UPLOAD_SIZE_MB=50

# TLS/SSL and Let's Encrypt e-mail
LETSENCRYPT_EMAIL=admin@file.match3onlinerewareds.gamer.gd

# SMTP (notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp_user
SMTP_PASS=smtp_pass
MAIL_FROM=notify@file.match3onlinerewareds.gamer.gd

# Rate limiting & anti-fraud
RATE_LIMIT_REQUESTS_PER_MINUTE=60
MAX_PAYOUT_PER_DAY=10000.00
MAX_PAYOUT_PER_REQUEST=2000.00